%h3 Üye Ol
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label "İsim"
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "İsim"
  .surname
    = f.label "Soyisim"
    %br/
    = f.text_field :surname, autofocus: true, autocomplete: "Soyisim"
  .field
    = f.label "E-posta"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "E-posta"
  .field
    = f.label "Şifre"
    - if @minimum_password_length
      %em
        (minimum karakter #{@minimum_password_length})
    %br/
    = f.password_field :password, autocomplete: "Şifre"
  .field
    = f.label "Şifre Doğrulama"
    %br/
    = f.password_field :password_confirmation, autocomplete: "Şifre"
  .actions
    = f.submit "Üye Ol"
= render "devise/shared/links"
