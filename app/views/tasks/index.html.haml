%h2
%table
  %thead
    %tr
      %th Zaman Tipi
      %th Yorum
      %th Başlangıç Zamanı
      %th Bitiş Zamanı
      %th{:colspan => "3"}
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.description
        %td= task.begin_time.strftime("%k:%M %d.%m.%Y")
        %td= task.deadline_time.strftime("%k:%M %d.%m.%Y")
        %td= link_to 'Görüntüle', task, class: "button"
        %td= link_to 'Kayıdı Düzenle', edit_task_path(task), class: "button"
        %td= link_to 'Kaydı Sil', task, method: :delete,  data: { confirm: 'Are you sure?' }, class: "button"
%br/
= link_to 'Yeni Zaman Kaydı Oluştur', new_task_path, class: "button"
